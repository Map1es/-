page {
  margin: 0;
  padding: 0;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.ypqz {
  width: 100%;
}

.ypqz image {
  width: 100%;
  height: 50rpx;
}

.top image {
  width: 70rpx;
  height: 70rpx;
  float: left;
  margin-left: 5rpx;
}

.top .search {
  border-radius: 50rpx;
  background: #f1f1f1;
  height: 50rpx;
  width: 95%;
  margin: 12rpx auto;
}

.phcolor {
  color: #e4e4e4;
  font: 300 28rpx/28rpx "微软雅黑";
}

.top .search image {
  width: 50rpx;
  height: 50rpx;
  float: left;
}

.top input {
  float: left;
  height: 100%;
  width: 90%;
  font: 300 28rpx/28rpx "微软雅黑";
}

/* 头条 */

.news {
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
}

.news image {
  height: 70rpx;
  width: 25%;
  float: left;
}

.news swiper {
  width: 70%;
  float: left;
  height: 70rpx;
  font: 300 32rpx/70rpx "微软雅黑";
}

.news text {
  margin-left: 20rpx;
}

.news .tehui {
  color: #f41017;
}

/* 精选 */
.jxtj image, .wntj image {
  width: 100%;
  height: 120rpx;
  display: block;
  margin: 0 auto;
}

.jx-content {
  background: #f1f1f1;
  overflow: hidden;
  height: 100%;
}

.jx-item {
  width: 50%;
  height: 500rpx;
  background: #fff;
  float: left;
  overflow: hidden;
  box-sizing: border-box;
  border: 1rpx solid #f1f1f1;
  padding: 20rpx;
}

.jx-item image {
  height: 70%;
  margin: 0 auto;
}

.jx-item .item-name {
  font: 400 42rpx/42rpx "微软雅黑";
  color: gray;
  display: block;
}

.jx-item .item-des {
  font: 300 28rpx/48rpx "微软雅黑";
  color: #d3d3d3;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 80%;
  white-space: nowrap;
}

.jx-item  .item-rank {
  color: #31c971;
}


/* 推荐 */

.wntj swiper {
  width: 100%;
  height: 500rpx;
  text-align: center;
}

.wntj swiper-item image {
  width: 350rpx;
  height: 350rpx;
}

.wntj swiper-item text {
  display: block;
  font: 600 40rpx/40rpx "微软雅黑";
}

.wntj swiper-item .item-money {
  font: 600 40rpx/40rpx "console";
  color: #d9ae46;
  margin-top: 20rpx;
}
